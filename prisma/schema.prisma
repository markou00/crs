// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String
}

model Customer {
  id             Int      @id @default(autoincrement())
  name           String
  type           String
  contactName    String
  contactEmail   String   @unique
  contactPhone   String?
  address        String
  city           String
  postalCode     String
  country        String
}